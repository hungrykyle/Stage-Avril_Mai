{% extends "layout.html.twig" %}


{% block title %}Archives{% endblock %}


{% block content %}
       <div class="starter-template">
      <h1>Retrouver des anciennes annonces</h1>
        <p class="lead"> <p>Trouver les annonces correspondant à un mot et à une date</p>
         <div class="form-group">
        {{ form_start(form,{ 'attr':  {
            'class': 'form-inline',}}) }}
           {{ form_errors(form.keywords) }}
            {{ form_widget(form.keywords, { 'attr':  {
              'rows': '4',
            'class': 'form-control',
            }}) }}
            {{ form_widget(form.dueDate, { 'attr':  {
            'widget' : 'single_text',
            'class': 'form-control input-inline datepicker', 
            'data-provide' : 'datepicker',
            'data-date-format' : 'yyyy-mm-dd'
            }}) }}
        

<input type="submit" class="btn btn-primary" value="Rechercher les annonces" />
</div>
</div>
{{ form_end(form) }}

{% endblock %}