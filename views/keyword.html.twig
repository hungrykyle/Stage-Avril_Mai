{% extends "layout.html.twig" %}


{% block title %}MotClé{% endblock %}


{% block content %}
    <div class="starter-template">
    <h1>Entrez un mot clé</h1>    
    <p class="lead"> <p> Trouver les annonces correspondant à un mot</p>
    <div class="form-group">
    {{ form_start(form,{ 'attr':  {
            'class': 'form-inline',}}) }}
            {{ form_errors(form.keyword) }}
        {{ form_widget(form.keyword, { 'attr':  {
        'rows': '4',
        'class': 'form-control',
        'placeholder': 'Entrez un mot clé'
        }}) }}
        <input type="submit" class="btn btn-primary" value="Ajouter ce mot clé" />
    {{ form_end(form) }}
    </div>
    </div>
    <div class="row">
        <h1>Vos mots clés</h1>
        {% for keyword in keywords %}
            <div id="keyword" class="col-sm-3">
                
                <a href="#">{{keyword.Keyword}}</a>
                                <a href="http://www.okki-prod.fr/projetStageMaxime2017/test/projet/web/keyword/update/{{ keyword.Id }}"  class="btn btn-info btn-xs" title="Edit"><span class="glyphicon glyphicon-edit"></span></a><button type="button" class="btn btn-danger btn-xs" title="Delete" data-toggle="modal" data-target="#deleteDialog{{ keyword.Id }}"><span class="glyphicon glyphicon-remove"></span></button>
                    <div class="modal fade" id="deleteDialog{{ keyword.Id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                        <div class="modal-content">
                         <div class="modal-header">
                         <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                         <h4 class="modal-title" id="myModalLabel">Confirmation</h4>
                         </div>
                         <div class="modal-body">
                         Voulez vous réellement supprimer ce mot clé ?
                         </div>
                         <div class="modal-footer">
                         <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                         
            
                         <a href="http://www.okki-prod.fr/projetStageMaxime2017/test/projet/web/keyword/delete/{{ keyword.Id }}" class="btn btn-danger">Confirmer</a>
                         </div>
                         </div><!-- /.modal-content -->
                         </div><!-- /.modal-dialog -->
                         </div><!-- /.modal -->
                         </div>
        {% endfor %}
    </div>
{% endblock %}